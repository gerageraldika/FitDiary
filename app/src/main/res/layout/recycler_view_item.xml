<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.15"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="1dp"
        android:backgroundTint="#37474F"
        card_view:contentPadding="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
               android:layout_centerVertical="true">

            <TextView
                android:id="@+id/list_item__date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_item__imt_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/list_item__date_text_view"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/list_item_weight_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="7dp"
                android:layout_below="@+id/list_item__date_text_view"
                android:textColor="@color/colorDeepOrange"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/list_item__calories_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="4dp"
                android:layout_below="@+id/list_item__imt_text_view"
                android:layout_toRightOf="@+id/list_item_weight_title_text_view"
                android:textColor="@color/colorDeepOrange"
                android:textSize="15sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/list_item_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_image_view"
                android:cropToPadding="true"
                android:scaleType="centerInside" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>